<Window x:Class="Solon.Registrierblatt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solon"
        mc:Ignorable="d"
        Title="Registrierblatt" WindowState="Maximized">
    <Grid>
        <Button x:Name="b_reg" Content="Registrieren!" HorizontalAlignment="Center" Width="138" Height="36" FontSize="20" Margin="308,388,314,80"/>
        <TextBox x:Name="tb_Name" HorizontalAlignment="Center" Height="23" Margin="317,185,323,296" TextWrapping="Wrap" Text="Username:"  Width="120" FontSize="18"/>
        <TextBox x:Name="tb_passw" HorizontalAlignment="Center" Height="23" Margin="317,252,323,229" TextWrapping="Wrap" Text="Passwort:"  Width="120" TextChanged="TextBox_TextChanged" FontSize="18"/>
        <TextBox x:Name="tb_passwb" HorizontalAlignment="Center" Height="23" Margin="317,311,323,170" TextWrapping="Wrap" Text="Passwort bestätigen:" Width="120" FontSize="18"/>
        <Label Content="SOLON" HorizontalAlignment="Center" Margin="308,48,314,400" RenderTransformOrigin="0.423,0.803" Height="56" Width="138" FontSize="36"/>

    </Grid>
</Window>
